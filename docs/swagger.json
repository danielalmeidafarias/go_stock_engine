            "delete": {
                "description": "Deletes a product stock by its ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "stock"
                ],
                "summary": "Delete a product stock",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Product stock ID",
                        "name": "id",
                        "in": "path",
